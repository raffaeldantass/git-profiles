body {
  box-sizing: border-box;
  font-family: 'Montserrat', sans-serif;
}

#root {
  height 100vh;
}

.container {
  display: grid;
  grid-template-columns: 300px 4fr;
  grid-template-rows: .4fr 4fr .4fr;
  grid-template-areas: "nav nav" "aside main" "footer footer";  
  height: 100%;
  width: 100%;
}